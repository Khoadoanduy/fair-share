// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_CONNECTION_STRING")
}

type Address {
  country     String
  street      String
  apartment   String?
  city        String
  state       String
  zipCode     String
}

// User model that will be linked to Clerk users
model User {
  id          String   @id @map("_id") @default(uuid())
  clerkId     String   @unique // Clerk user ID
  email       String   @unique
  firstName   String?
  lastName    String?
  dateOfBirth DateTime
  phoneNumber String?  
  address     Address
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


